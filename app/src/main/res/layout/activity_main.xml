<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ash.hangman.View">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgLives"
        android:gravity="center"
        android:layout_below="@+id/btnGuess"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblGuesses"
        android:layout_marginBottom="15dp"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        android:id="@+id/btnGuess"
        android:gravity="center"
        android:layout_below="@+id/txtGuess"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="24dp"
        android:id="@+id/lblWord"
        android:gravity="center"
        android:layout_above="@+id/lblGuesses" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="10"
        android:id="@+id/txtGuess"
        android:gravity="center"
        android:digits="@string/limits"
        android:layout_below="@+id/lblTopInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTopInfo"
        android:textSize="18dp"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/bottom_bar"
        android:layout_alignParentTop="true"
        android:id="@+id/imgHeader"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lblGuesses" />

</RelativeLayout>
