<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ash.hangman.MainView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblGuesses"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:maxLines = "3"
        android:minLines="3"
        android:scrollbars = "vertical"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuess"
        android:layout_below="@+id/txtGuess"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_guess" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="24sp"
        android:id="@+id/lblWord"
        android:gravity="center"
        android:layout_above="@+id/lblGuesses" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="10"
        android:id="@+id/txtGuess"
        android:gravity="center"
        android:digits="@string/limits"
        android:layout_below="@+id/lblTopInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTopInfo"
        android:textSize="18sp"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hangman_game_start"
        android:id="@+id/imgLives"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lblWord"
        android:layout_below="@+id/btnGuess" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgHeader"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/txtGuess"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_banner" />

</RelativeLayout>
